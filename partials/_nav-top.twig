<nav id="top-navbar">
{% if settings.topbanner %}
  <div class="topbanner" style="background-color: {{ settings.topbanner_bg_color }}; width: 100%;">
    <p class="topbanner__text" style="color: {{ settings.topbanner_text_color }}; margin: 0;">{% if settings.topbanner_link is not empty %}
      <a class="topbanner__link" href="{{ settings.topbanner_link }}" style="color: {{ settings.topbanner_text_color }};">{{ settings.topbanner_text }}</a>
      {% else %}
      {{ settings.topbanner_text }}
      {% endif %}
    </p>
  </div>
{% endif %}
  <div class="container">
    <ul class="nav navbar-nav top-navbar__left">
    {% if store.customer_accounts_enabled_or_optional and settings.header_display_my_account %}
      {% if customer %}
      <li class="navbar-account"><a href="/cuenta"><i class="zmdi zmdi-face" aria-hidden="true"></i> Mi Cuenta</a></li>
      <li class="navbar-account"><a href="/cuenta/logout"><i class="zmdi zmdi-account-o" aria-hidden="true"></i> Cerrar sesi√≥n</a></li>
      {% else %}
      <li class="navbar-account"><a href="/cuenta/login"><i class="zmdi zmdi-account" aria-hidden="true"></i> Ingresar</a></li>
      <li class="navbar-account"><a href="/cuenta/registro"><i class="zmdi zmdi-account-add" aria-hidden="true"></i> Registrarse</a></li>
      {% endif %}
    {% endif %}
    </ul>

    {% if settings.header_display_search %}
    <form action="/buscar" method="get" class="top-navbar__search navbar-right">
      <div class="form-group">
        <div class="input-group">
          <label class="sr-only" for="headerSearch">Buscar productos</label>
          <div class="input-group-addon"><i class="zmdi zmdi-search"></i></div>
          <input type="text" name="q" class="form-control" id="headerSearchBox" placeholder="Buscar..." autocomplete="on">
        </div>
      </div>
    </form>
    {% endif %}

    <ul class="nav navbar-nav top-navbar__right">
      <li class="top-navbar__cart"><a href="/carrito">
        <i class="zmdi zmdi-shopping-cart" aria-hidden="true"></i>
        {% if cart.total_items > 0 %}
        <span class="cart-item-count">{{ cart.total_items }}</span>
        {% endif %}
        </a></li>
    </ul>
  </div>
</nav>
