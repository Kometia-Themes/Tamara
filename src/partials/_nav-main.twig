<div class="nav-wrapper">
  <nav id="main-navbar" class="navbar" role="navigation">
    <div class="container">
      <div class="navbar-header{% if settings.use_logo == false or settings['logo.png'] is empty %} isLogoText{% endif %}">
        <div class="logo-container">
          <div class="outer">
              <div class="inner">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                {% if settings.use_logo and settings['logo.png'] is not empty %}
                <a class="navbar-brand{% if settings['mobilelogo.png'] is not empty %} hasMobileLogo{% endif %}" href="/"><img class="logo-img" src="{{ settings['logo.png'] }}&h=100" alt="{{ store.name }}"></a>
                  {% if settings['mobilelogo.png'] is not empty %}
                  <a class="navbar-brand mobile" href="/"><img class="logo-img" src="{{ settings['mobilelogo.png'] }}&h=100" alt="{{ store.name }}"></a>
                  {% endif %}
                {% else %}
                <a class="navbar-brand logo-text" href="/">{{ store.name }}</a>
                {% endif %}
              </div>
          </div>
        </div>
      </div>
      <div id="main-navbar-collapse" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right navigation">
          {% for links in menus.main %}
            {% if links.children | length > 0 %}
              <li class="dropdown{% if loop.last %} isLastItem{% endif %}">
              {% include '_nav-item.twig' %}
              </li>
            {% else %}
              <li><a class="navigation__parent-link" href="{{ links.url }}">{{ links.name }}</a></li>
            {% endif %}
          {% endfor %}
          <li class="main-navbar-affix__cart"><a href="/carrito">
            <i class="zmdi zmdi-shopping-cart" aria-hidden="true"></i>
            <span class="cart-item-count{% if cart.total_items > 0 %} active{% endif %}">{% if cart.total_items > 0 %}{{ cart.total_items }}{% endif %}</span>
            </a></li>
        </ul>
      </div>
    </div>
  </nav>
</div>
