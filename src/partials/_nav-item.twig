{% if links.children | length > 0 %}
  <a class="navigation__link" href="{{ links.url }}" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">{{ links.name }} <span class="drop-icon"><i class="zmdi zmdi-caret-down"></i></span></a>
  <ul class="dropdown-menu">
    {% for children in links.children %}
      <li class="dropdown">
      {% include '_nav-item.twig' with {'links': children} %}
      </li>
    {% endfor %}
  </ul>
{% else %}
<li>
  <a class="navigation__parent-link" href="{{ links.url }}">{{ links.name }}</a>
</li>
{% endif %}
